{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [ "ESNext", "DOM" ],
    "strict": true,
    "allowJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": [ "node", "vite/client" ],
    "allowSyntheticDefaultImports": true,
  }
}